# Binance API Configuration
# Get your API keys from:
# - Testnet: https://testnet.binancefuture.com/
# - Live: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Trading Mode
# Set to 'true' for testnet (paper trading), 'false' for live trading
TESTNET=true

# Trading Parameters
TRADING_PAIR=BTCUSDT
TIMEFRAME=5m  # Options: 1m, 3m, 5m, 15m, 30m, 1h, 2h, 4h, 6h, 12h, 1d

# Leverage & Margin
LEVERAGE=3              # 1-125x (be conservative!)
MARGIN_TYPE=ISOLATED    # ISOLATED or CROSS

# Position Sizing
# Percentage of available balance to use per trade
POSITION_SIZE_PCT=90    # 90% of balance (conservative: 50-70, aggressive: 90-100)

# Risk Management
# Stop loss: automatic exit on loss
STOP_LOSS_PCT=2.0       # 2% loss (tight: 1-2, loose: 3-5)

# Take profit: automatic exit on profit
TAKE_PROFIT_PCT=5.0     # 5% profit (conservative: 3-5, aggressive: 7-10)

# Trailing stop: follows price to lock in profits
TRAILING_STOP_PCT=1.5   # 1.5% distance (tight: 0.5-1, loose: 2-3)

# Daily loss limit: bot stops if daily loss exceeds this
MAX_DAILY_LOSS_PCT=5.0  # 5% max daily loss (strict: 2-3, relaxed: 5-10)

# Signal Configuration
# Minimum confidence required to take a trade (0-100)
MIN_CONFIDENCE=55              # 55% minimum (conservative: 60-70, aggressive: 50-55)
MIN_CONFIDENCE_LONG=55         # Minimum confidence for LONG trades
MIN_CONFIDENCE_SHORT=55        # Minimum confidence for SHORT trades
MIN_CONFIDENCE_DEFAULT=55      # Default minimum confidence

# Multi-Timeframe Analysis
# Enable higher timeframe filtering to reduce false signals
USE_MULTI_TIMEFRAME=true       # true/false - Use higher timeframe trend filtering

# Order Type Configuration
# 'limit' = Lower fees (0.02% maker), may not fill immediately
# 'market' = Instant fill, higher fees (0.04% taker)
ORDER_TYPE=limit               # limit or market (recommended: limit)
LIMIT_OFFSET_PCT=0.05          # Distance from current price for limit orders (0.05 = 0.05%)
LIMIT_RETRY_ATTEMPTS=3         # Number of retry attempts for limit orders
LIMIT_RETRY_INTERVAL=15        # Wait time between retries (seconds)
LIMIT_SKIP_ON_FAILURE=true     # Skip trade if limit order not filled (recommended: true)

# Auto-Training Configuration
# Bot automatically downloads data and trains ML models on first run
# These settings control the auto-training behavior
AUTO_TRAIN_LIMIT=2000          # Number of candles to use for training (more = better, slower)
USE_CACHED_DATA=true           # Use cached Parquet data when available (faster)
